<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
  <title>Blogify</title>
  <style>
    .fixed-preview-img {
      width: 100%;
      height: 200px;
      object-fit: cover;
      border-radius: 8px 8px 0 0;
    }
    .card {
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    }
    .author-info {
      display: flex;
      align-items: center;
      margin-top: 10px;
    }
    .author-info img {
      width: 32px;
      height: 32px;
      border-radius: 50%;
      margin-right: 8px;
    }
  </style>
</head>

<body>
  <%- include('./partials/nav') %>

  <div class="container mt-4">
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% blogs.forEach(blog => { %>
        <div class="col">
          <div class="card h-100 shadow-sm border-0 rounded-4">
            
            <img src="<%= blog.coverImageURL ? blog.coverImageURL : '/images/default.jpg' %>"
              class="fixed-preview-img"
              alt="Preview Image"
              onerror="this.onerror=null;this.src='/images/default.jpg';" />

            <div class="card-body">
              <h5 class="card-title fw-bold">
                <%= blog.title %>
              </h5>
              <div class="author-info text-muted">
                
                <img src="<%= blog.createdBy && blog.createdBy.profileImageURL ? blog.createdBy.profileImageURL : '/images/user_avt.png' %>" alt="Author">
                
                <small>By <%= blog.createdBy ? blog.createdBy.fullName : "Anonymous" %></small>
              </div>
              <div class="mt-3">
                <a href="/blog/<%= blog._id %>" class="btn btn-sm btn-primary">Read More â†’</a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <%- include('./partials/scripts') %>
</body>
</html>
