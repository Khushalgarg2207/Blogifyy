<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title><%= blog.title %> | Blogify</title>
</head>
<body>
  <%- include('./partials/nav') %>

  <div class="container mt-5">
    <!-- Blog Card -->
    <div class="card shadow-sm border-0 rounded-4 mb-4">
      <img src="<%= blog.coverImageURL %>" class="card-img-top rounded-top" alt="Blog Cover" style="max-height: 400px; object-fit: cover;">
      <div class="card-body">
        <h1 class="fw-bold text-primary mb-3"><%= blog.title %></h1>
        <p class="text-muted mb-4">
          <img src="<%= blog.createdBy.profileImageURL %>" class="rounded-circle me-2" width="40" height="40" alt="Author">
          <span class="fw-semibold"><%= blog.createdBy.fullName %></span>
        </p>
        <p class="card-text fs-5" style="line-height: 1.6;"><%= blog.body %></p>
      </div>
    </div>

    <div class="card shadow-sm border-0 rounded-4">
      <div class="card-body">
        <h3 class="fw-bold mb-4">Comments (<%= comments.length %>)</h3>

        <% if (locals.user) { %>
          <form action="/blog/comment/<%= blog._id %>" method="post" class="mb-4">
            <div class="input-group">
              <input type="text" class="form-control rounded-start" name="content" placeholder="Write a comment..." required>
              <button type="submit" class="btn btn-primary rounded-end">
                <i class="bi bi-send"></i> Post
              </button>
            </div>
          </form>
        <% } else { %>
          <p class="text-muted">Please <a href="/user/signin" class="fw-semibold text-decoration-none">sign in</a> to add a comment.</p>
        <% } %>

        <% if (comments.length > 0) { %>
          <ul class="list-group list-group-flush">
            <% comments.forEach(comment => { %>
              <li class="list-group-item d-flex align-items-start">
                <img src="<%= comment.createdBy.profileImageURL %>" class="rounded-circle me-3" width="40" height="40" alt="User">
                <div>
                  <h6 class="fw-semibold mb-1"><%= comment.createdBy.fullName %></h6>
                  <p class="mb-0"><%= comment.content %></p>
                </div>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <p class="text-muted">No comments yet. Be the first to comment!</p>
        <% } %>
      </div>
    </div>
  </div>

  <%- include('./partials/scripts') %>
</body>
</html>